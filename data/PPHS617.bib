	date-modified = {2016-04-06 15:30:23 +0000},
	journal = {BMJ},
	journal-full = {BMJ (Clinical research ed.)},
	mesh = {Biomedical Research; Checklist; Clinical Trials as Topic; Delphi Technique; Humans; Program Evaluation; Reproducibility of Results; Research Design; Research Report},
	pages = {g1687},
	pmid = {24609605},
